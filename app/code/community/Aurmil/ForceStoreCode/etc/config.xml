<config>
    <modules>
        <Aurmil_ForceStoreCode>
            <version>1.2.0</version>
        </Aurmil_ForceStoreCode>
    </modules>
    <global>
        <helpers>
            <aurmil_forcestorecode>
                <class>Aurmil_ForceStoreCode_Helper</class>
            </aurmil_forcestorecode>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <force_store_code>
                        <class>Aurmil_ForceStoreCode_Model_Observer</class>
                        <method>forceStoreCode</method>
                    </force_store_code>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <aurmil_forcestorecode>
                    <files>
                        <default>Aurmil_ForceStoreCode.csv</default>
                    </files>
                </aurmil_forcestorecode>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <web>
            <url>
                <force_store>1</force_store>
            </url>
        </web>
    </default>
</config>
